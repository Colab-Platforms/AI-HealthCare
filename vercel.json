{
  "version": 2,
  "buildCommand": "cd client && npm ci --include=dev && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install --production=false && cd server && npm install --production=false",
  "devCommand": "cd client && npm run dev",
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/diet-recommendations/:path*",
      "destination": "/api/diet-recommendations"
    },
    {
      "source": "/api/nutrition/:path*",
      "destination": "/api/nutrition"
    },
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
